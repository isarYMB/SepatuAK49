<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.VerifikasiPesanan"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/top_toolbar"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginRight="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="4dp"
            android:id="@+id/verifikasi_nanti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:backgroundTint="@color/dark_blue"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verifikasi"
            android:textColor="@color/dark_blue"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_medium"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            >

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/otpAnimation"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                app:lottie_rawRes="@raw/verifikasi"
                app:lottie_autoPlay="true"
                app:lottie_loop="true">

            </com.airbnb.lottie.LottieAnimationView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            android:textSize="23dp"
            android:textColor="@color/dark_blue"
            android:gravity="center"
            android:text="Verifikasi Pesanan Anda"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/t1"
            android:fontFamily="@font/roboto_medium"/>
        <TextView
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="14dp"
            android:text="Sebelum melakukan verifikasi, pesanan anda belum dapat kami kirimkan. Harap melakukan verifikasi terlebih dahulu melalui Whatsapp kami."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/t1"
            android:fontFamily="@font/roboto"/>
        <LinearLayout
            android:id="@+id/verifikasi_sekarang"
            android:layout_marginTop="40dp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/button_circle_bg"
            android:backgroundTint="@color/dark_blue"
            android:orientation="horizontal"
            android:layout_marginBottom="50dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verifikasi"
                android:textSize="16dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/gold"/>
        </LinearLayout>

    </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>