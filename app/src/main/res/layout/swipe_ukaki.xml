<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SwipeUkaki"
    android:background="@color/dark_blue">

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swipePagerUkaki"/>
    <LinearLayout
        android:id="@+id/lytUkaki"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="70dp"
        android:layout_alignParentBottom="true">
        <com.rd.PageIndicatorView
            android:id="@+id/swipeIndicatorUkaki"
            app:piv_viewPager="@id/swipePagerUkaki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:piv_count="4"
            app:piv_orientation="horizontal"
            app:piv_selectedColor="@color/gold"
            app:piv_unselectedColor="@color/white"
            app:piv_radius="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_above="@id/lytUkaki"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:width="120dp"
            android:id="@+id/finishSwipeUkaki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_circle_bg"
            android:backgroundTint="@color/white"
            android:textColor="@color/dark_blue"
            android:text="Kembali"/>
        <Button
            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp"
            android:id="@+id/downloadUkaki"
            android:width="120dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_circle_bg"
            android:backgroundTint="@color/gold"
            android:textColor="@color/dark_blue"
            android:fontFamily="@font/roboto_bold"
            android:text="Download"/>
    </LinearLayout>


</RelativeLayout>