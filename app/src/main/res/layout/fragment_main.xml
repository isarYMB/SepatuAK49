<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MainFragment">
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/edt_search"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/search_bg"
        android:backgroundTint="@color/white"
        android:focusable="false"
        android:translationZ="90dp"
        app:iconifiedByDefault="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:queryBackground="@android:color/transparent"
        app:showAsAction="always|collapseActionView">

        <ImageView
            android:layout_marginStart="13dp"
            android:id="@+id/image21"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_search_primary_24dp"
            android:backgroundTint="#99999b"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textColor="#99999b"
            android:fontFamily="@font/roboto"
            android:layout_marginLeft="0dp"
            android:layout_toRightOf="@id/image21"
            android:gravity="center_vertical"
            android:text="Cari Sepatu..."
            android:textSize="17dp" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/home_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    </FrameLayout>
    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/bottom_bg"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_cart">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-7dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/img_home"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:tint="@color/dark_blue"
                    app:srcCompat="@drawable/ic_home"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/tv_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_home"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="-17dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="Beranda"
                    android:textSize="12dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="-7dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/img_wishlist"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:tint="@color/dark_blue"
                    app:srcCompat="@drawable/ic_keranjang"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/tv_keranjang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_wishlist"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="-17dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="Keranjang"
                    android:textSize="12dp" />

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="?attr/actionBarSize"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="0dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-7dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/img_setting"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_marginLeft="2.5dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:tint="@color/dark_blue"
                    app:srcCompat="@drawable/ic_gear"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/tv_lainnya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_setting"
                    android:layout_marginTop="-17dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="Lainnya"
                    android:layout_marginLeft="10dp"
                    android:textSize="12dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-7dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/img_profile"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:tint="@color/dark_blue"
                    app:srcCompat="@drawable/ic_person"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/tv_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_profile"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="-17dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="Profil"
                    android:textSize="12dp" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        app:backgroundTint="@color/dark_blue"
        app:elevation="2dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/dark_blue"
        app:srcCompat="@drawable/ic_cart_golden"
        tools:ignore="VectorDrawableCompat" />


</androidx.constraintlayout.widget.ConstraintLayout>