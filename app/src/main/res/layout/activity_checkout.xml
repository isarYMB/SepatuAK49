<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activities.CheckoutActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/top_toolbar"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:background="@color/background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="4dp"
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                android:backgroundTint="@color/dark_blue"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Checkout"
                android:textColor="@color/dark_blue"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_medium"/>


        </LinearLayout>
        <ScrollView
            android:layout_below="@id/top_toolbar"
            android:layout_above="@id/bottom_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/mid_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        app:cardUseCompatPadding="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/linearLayout7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp">

                            <ImageView
                                android:id="@+id/img_produk_checkout"
                                android:layout_width="100dp"
                                android:layout_height="75dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="8dp"
                                android:background="@color/white"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/linearLayout10"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <LinearLayout
                                android:id="@+id/linearLayout10"
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:orientation="vertical"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/img_produk_checkout"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/tv_merek_checkout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="Chair"
                                    android:textColor="@color/dark_blue"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/tv_title_checkout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_light"
                                    android:text="B2 lounge"
                                    android:textColor="@color/dark_blue"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearLayout9"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/linearLayout10"
                                app:layout_constraintTop_toTopOf="parent">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    app:cardCornerRadius="10dp"
                                    app:cardUseCompatPadding="true">

                                    <LinearLayout
                                        android:layout_width="80dp"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/btn_kurang"
                                            android:layout_width="20dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginRight="10dp"
                                            android:src="@drawable/ic_remove" />

                                        <TextView
                                            android:id="@+id/tv_jumlah"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/roboto_bold"
                                            android:text="1"
                                            android:textColor="@color/black" />

                                        <ImageView
                                            android:id="@+id/btn_tambah"
                                            android:layout_width="20dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:src="@drawable/ic_add" />

                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Informasi Pengantaran"

                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="20sp"
                        android:textColor="@color/dark_blue"/>
                    <androidx.cardview.widget.CardView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        app:cardUseCompatPadding="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp">
                        <LinearLayout
                            android:padding="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Alamat"
                                    android:fontFamily="@font/roboto"
                                    android:textSize="18sp"
                                    android:textColor="@color/dark_blue"/>
                                <TextView
                                    android:id="@+id/alamat_checkout"
                                    android:layout_marginTop="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Silahkan Isi Nomor Telepon"
                                    android:fontFamily="@font/roboto_light"/>
                                <TextView
                                    android:id="@+id/nomor_checkout"
                                    android:layout_marginTop="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Silahkan Mengisi Alamat"
                                    android:fontFamily="@font/roboto_light"/>

                            </LinearLayout>
                            <LinearLayout
                                android:gravity="right"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/edit_alamat"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginRight="0dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_edit"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ongkos Kirim"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="20sp"
                        android:textColor="@color/dark_blue"
                        />
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        app:cardUseCompatPadding="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp">

                        <RelativeLayout
                            android:paddingLeft="17dp"
                            android:layout_marginRight="17dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/img_jne"
                                android:layout_width="85dp"
                                android:layout_marginLeft="20dp"
                                android:layout_height="70dp"
                                android:src="@drawable/jne"
                                android:gravity="center_vertical"/>
                            <TextView
                                android:id="@+id/rp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingBottom="10dp"
                                android:paddingTop="18dp"
                                android:fontFamily="@font/roboto"
                                android:textSize="18sp"
                                android:textColor="@color/dark_blue"
                                android:gravity="center_vertical"
                                android:layout_toLeftOf="@id/tv_ongkir"
                                android:text="Rp"/>
                            <TextView
                                android:id="@+id/tv_ongkir"
                                android:layout_alignParentRight="true"
                                android:paddingTop="18dp"
                                android:paddingBottom="10dp"
                                android:paddingRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="0"
                                android:fontFamily="@font/roboto"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:gravity="center_vertical"
                                android:layout_marginRight="20dp"/>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Metode Pembayaran"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="20sp"
                        android:textColor="@color/dark_blue"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        app:cardUseCompatPadding="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioGroup
                                android:id="@+id/rb_group"
                                android:paddingLeft="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <RadioButton
                                    android:id="@+id/rbt_cod"
                                    android:layout_width="wrap_content"
                                    android:layout_height="55dp"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="center_vertical"
                                    android:onClick="MetodePembayaran" />
                                <RadioButton
                                    android:layout_marginBottom="5dp"
                                    android:id="@+id/rbt_bank"
                                    android:layout_width="wrap_content"
                                    android:layout_height="50dp"
                                    android:gravity="center_vertical"
                                    android:onClick="MetodePembayaran"/>
                            </RadioGroup>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:paddingRight="20dp"
                                    android:paddingTop="20dp"
                                    android:paddingBottom="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="52dp"
                                        android:layout_marginLeft="12dp"
                                        android:layout_height="50dp"
                                        android:src="@drawable/cod"
                                        android:gravity="center_vertical"/>
                                    <TextView
                                        android:layout_marginLeft="20dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="Cash On Delivery"
                                        android:fontFamily="@font/roboto"
                                        android:textSize="18sp"
                                        android:textColor="@color/dark_blue"
                                        android:gravity="center_vertical"/>

                                </LinearLayout>
                                <LinearLayout
                                    android:paddingRight="20dp"
                                    android:paddingBottom="20dp"
                                    android:paddingTop="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="65dp"
                                        android:layout_marginLeft="7dp"
                                        android:layout_height="50dp"
                                        android:src="@drawable/ic_credit_card"
                                        android:gravity="center_vertical"/>
                                    <TextView
                                        android:layout_marginLeft="13dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="Transfer Bank"
                                        android:fontFamily="@font/roboto"
                                        android:textSize="18sp"
                                        android:textColor="@color/dark_blue"
                                        android:gravity="center_vertical"/>

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </RelativeLayout>



        </ScrollView>
        <LinearLayout
            android:id="@+id/bottom_item"
            android:background="@drawable/cart_bottom_bg"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text="Total Belanja"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">
                    <TextView
                        android:id="@+id/tv_total"
                        android:layout_marginRight="8dp"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="18dp"
                        android:text="$760.00"/>
                </LinearLayout>

            </LinearLayout>
            <Button
                android:id="@+id/btn_checkout"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buat Pesanan"
                android:textSize="16dp"
                android:layout_marginRight="13dp"
                android:layout_marginLeft="13dp"
                android:textAllCaps="false"
                android:textColor="@color/gold"
                android:fontFamily="@font/roboto_bold"
                android:background="@drawable/button_circle_bg"
                android:backgroundTint="@color/dark_blue"/>
        </LinearLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>