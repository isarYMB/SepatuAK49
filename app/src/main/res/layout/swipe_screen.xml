<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SwipeActivity"
    android:background="@color/dark_blue">

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swipePager"/>
    <LinearLayout
        android:id="@+id/lyt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="70dp"
        android:layout_alignParentBottom="true">
        <com.rd.PageIndicatorView
            android:id="@+id/swipeIndicator"
            app:piv_viewPager="@id/swipePager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:piv_count="6"
            app:piv_orientation="horizontal"
            app:piv_selectedColor="@color/gold"
            app:piv_unselectedColor="@color/white"
            app:piv_radius="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="30dp"
        android:layout_above="@id/lyt1"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:id="@+id/finishSwipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:background="@drawable/button_circle_bg"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/dark_blue"
            android:text="mulai belanja"/>
    </LinearLayout>


</RelativeLayout>