<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".activities.SplashScreen"
    android:id="@+id/no_internetLayout"
    >

    <LinearLayout
        android:id="@+id/no_noConnection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">


        <com.airbnb.lottie.LottieAnimationView
            android:layout_marginTop="30dp"
            android:id="@+id/lottie_noConnection"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="30dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"

            app:lottie_rawRes="@raw/no_connection" />

        <TextView
            android:id="@+id/sorryNoConnection"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lottie_noConnection"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="Maaf, anda tidak terhubung dengan jaringan internet"
            android:textColor="@color/dark_blue"
            android:textSize="18dp" />

        <Button
            android:id="@+id/try_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sorryNoConnection"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/button_circle_bg"
            android:backgroundTint="@color/dark_blue"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Coba Lagi"
            android:textColor="@color/white" />
    </LinearLayout>


</LinearLayout>